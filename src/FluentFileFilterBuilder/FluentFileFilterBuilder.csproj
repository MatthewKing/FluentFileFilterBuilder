<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>FluentFileFilterBuilder</PackageId>
    <Title>FluentFileFilterBuilder</Title>
    <Description>A lightweight fluent builder that easily creates file filter strings such as those used in OpenFileDialog and SaveFileDialog.</Description>
    <Authors>Matthew King</Authors>
    <Copyright>Copyright 2017 Matthew King.</Copyright>
    <PackageProjectUrl>https://github.com/MatthewKing/FluentFileFilterBuilder</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <VersionPrefix>1.0.0</VersionPrefix>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net40;netstandard1.0;netstandard2.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

</Project>
